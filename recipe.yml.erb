rresources:
  - type: command
    script: brew update
  <%- homebrew_package_names.each do |homebrew_package_name| -%>
  - type: homebrew_package
    name: <%= homebrew_package_name %>
  <%- end -%>
  - type: command
    script: brew tap caskroom/versions
  <%- homebrew_cask_package_names.each do |homebrew_cask_package_name| -%>
  - type: homebrew_cask_package
    name: <%= homebrew_cask_package_name %>
  <%- end -%>
  - type: rbenv_ruby
    version: 2.2.4
    global: true
  <%- login_item_names.each do |login_item_name| -%>
  - type: login_items
    path: /Users/takashi/Applications/<%= login_item_name %>.app
    hidden: true
  <%- end -%>
  - type: defaults
    domain: com.apple.dock
    key: autohide
    value: 1
    notify:
      - restart_dock
  - type: defaults
    domain: com.apple.dock
    key: persistent-apps
    value: []
    notify:
      - restart_dock
  - type: defaults
    domain: com.apple.dock
    key: persistent-others
    value: []
    notify:
      - restart_dock
  - type: defaults
    domain: com.apple.screencapture
    key: type
    value: png
  - type: defaults
    domain: com.apple.screencapture
    key: location
    value: ~/Pictures/captures/
  - type: defaults
    key: com.apple.sound.beep.feedback
    value: 1
  - type: defaults
    key: AppleKeyboardUIMode
    value: 3 # Allow full keyboard access
  - type: git
    repository: https://github.com/takashi/dotfiles.git
    path: /Users/takashi/src/github.com/takashi/dotfiles
    status: updated
  - type: command
    script: mkdir -p /Users/takashi/.vim/bundle
  - type: command # install oh-my-fish
    script: curl -L github.com/oh-my-fish/oh-my-fish/raw/master/bin/install | fish
  <%- dotfiles.each do |path| -%>
  - type: symlink
    destination: /Users/takashi/src/github.com/takashi/dotfiles/linked/<%= path %>
    source: /Users/takashi/<%= path %>
  <%- end -%>
  - type: command
    script: echo "/usr/local/bin/fish" | sudo tee -a /etc/shells
  - type: command
    check_script: "finger -l | grep -E 'Shell: /usr/local/bin/fish$'"
    script: sudo chsh -s /usr/local/bin/fish takashi
handlers:
  - id: restart_dock
    type: command
    script: killall Dock
